                @Html.DisplayFor(modelItem => item.Ticket.TicketType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpsaleCopy)
            </td>
            <td>

            <td>
                @Html.ActionLink("Tell me more!", "EventDetail", "Event", new { id = item.EventID }, null)})
            </td>

           

            @*@using (Html.BeginForm("EncodeGoogleCal", "Event", new { eventId = item.EventID }))
