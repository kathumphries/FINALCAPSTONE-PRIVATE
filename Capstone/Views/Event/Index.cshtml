@model IEnumerable<Capstone.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="SaveEvent">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
           
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Podcast.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beginning)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ending)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFinalized)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.CoverPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.TicketType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpsaleCopy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionCopy)
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Podcast.Title)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.Beginning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ending)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFinalized)
            </td>
            
            <td>
                <a img src = @Html.DisplayFor(modelItem => item.CoverPhoto)></a>
                @Html.DisplayFor(modelItem => item.CoverPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionCopy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.TicketType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpsaleCopy)
            </td>
            <td>

                @Html.ActionLink("Event - Edit", "EditEvent", "Event", new { id = item.EventID }, null)
                @Html.ActionLink("Event - Details", "EventDetail", "Event", new { id = item.EventID }, null)


                @Html.ActionLink("Podcast - Edit", "Edit", "Podcast", new { id = item.PodcastID }, null)
                @Html.ActionLink("Podcast - Details", "Detail", "Podcast", new { id = item.PodcastID }, null)

                @Html.ActionLink("DELETE Event", "DeleteEvent", "Event", new { id = item.PodcastID }, null)

                @using (Html.BeginForm("EncodeICal", "Event", new {eventId = item.EventID }))
                {
                    <input type="submit" value="Add to iCal" class="ical-button" id="button" /><br />
                }

            </td>
        </tr>
}
    </tbody>
</table>
